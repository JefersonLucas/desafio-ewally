{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["module-resolver", {
      "alias": {
        "@controllers": "./src/controllers",
        "@repositories": "./src/repositories",
        "@routes": "./src/routes",
        "@services": "./src/services",
        "@utils": "./src/utils"
      }
    }]
  ],
  "ignore": [
    "**/*spec.ts"
  ]
}
